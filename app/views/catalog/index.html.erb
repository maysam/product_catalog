<h1>
  Product Catalog
</h1>
<div class="row well">
  <%= form_tag("/", method: "post", class: "form-horizontal") do %>
    <div class="form-group">
      <label for="categories" class="col-sm-2 control-label">Filter by category</label>
      <div class="col-sm-10">
        <select class="dropdown form-control" multiple="true" id="categories" name="categories[]">
          <%= options_for_select(@categories.map{|cat|[cat, cat.id] }, selected: params[:categories]) %>
        </select>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Filter</button>
      </div>
    </div>
  <% end %>
</div>
<div class="row">
  <table class="table table-bordered">
    <thead>
      <th>Product</th>
      <th>Description</th>
      <th>Price</th>
    </thead>
    <%= render(@products) || "<tr><td colspan=3><center>There are no products available.</center></td></tr>".html_safe %>
  </table>
</div>