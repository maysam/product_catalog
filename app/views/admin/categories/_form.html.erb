<%= form_for([:admin, @category], html: {class: "form-horizontal"}) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :parent_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :parent_id, options_for_select(Category.parent_to_be.map{|cat| [cat, cat.id]}, @category.parent_id), include_blank: true, class: 'form-control' %>
    </div>
  </div>

  <div class="actions col-sm-offset-2">
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
