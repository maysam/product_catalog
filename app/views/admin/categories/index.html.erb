<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Category</th>
      <th>Parent</th>
      <th>Children Count</th>
      <th>Products Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category %></td>
        <td><%= category.parent %></td>
        <td><%= category.children.count %></td>
        <td><%= category.products.count %></td>
        <td><%= link_to 'Show', admin_category_path(category), class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_admin_category_path, class: 'btn btn-primary' %>
