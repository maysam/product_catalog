<%= form_for([:admin, @product], html: {class: "form-horizontal"}) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :description, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :amount, 'Price in cents', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :amount, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :categories, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :category_ids, Category.all, :id, :name, {}, {multiple: true, class: 'form-control dropdown'} %>
    </div>
  </div>

  <div class="actions col-sm-offset-2">
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
