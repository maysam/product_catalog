<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Categories:</strong>
  <%= @product.categories.map { |e| link_to e, admin_category_path(e)  }.join(', ').html_safe %>
</p>

<%= link_to 'Edit', edit_admin_product_path(@product), class: 'btn btn-link' %>
<%= link_to 'Back', admin_products_path, class: 'btn btn-link' %>
